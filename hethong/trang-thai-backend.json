{
  // Trạng thái hiện tại của hệ thống:
  // Các giá trị hợp lệ:
  // - online         → hoạt động bình thường
  // - degraded       → hiệu suất thấp
  // - partial_outage → gián đoạn một phần
  // - major_outage   → sập toàn bộ
  // - maintenance    → bảo trì định kỳ
  // - updating       → đang cập nhật
  // - down           → ngừng hoạt động hoàn toàn
  // - unknown        → không xác định được trạng thái

  "status": "major_outage",

  // Tin nhắn thông báo tình trạng hiện tại
  "message": "Toàn bộ hệ thống gặp sự cố nghiêm trọng. Đội ngũ đang xử lý.",

  // Mã HTTP tương ứng (tham khảo):
  // 200 → OK (online)
  // 201 → degraded
  // 207 → partial_outage
  // 500 → major_outage
  // 102 → maintenance / updating
  // 503 → down
  // 520 → unknown
  "code": 500
}
